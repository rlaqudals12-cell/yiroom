# Auto-detect text files and normalize line endings to LF
* text=auto eol=lf

# Explicitly set line endings for common file types
*.ts text eol=lf
*.tsx text eol=lf
*.js text eol=lf
*.jsx text eol=lf
*.json text eol=lf
*.md text eol=lf
*.css text eol=lf
*.scss text eol=lf
*.html text eol=lf
*.yaml text eol=lf
*.yml text eol=lf

# Use bd merge for beads JSONL files
.beads/issues.jsonl merge=beads
