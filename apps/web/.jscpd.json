{
  "threshold": 5,
  "reporters": ["console"],
  "ignore": [
    "**/node_modules/**",
    "**/.next/**",
    "**/coverage/**",
    "**/tests/**",
    "**/e2e/**",
    "**/*.test.{ts,tsx}",
    "**/*.spec.{ts,tsx}",
    "**/*.stories.{ts,tsx}",
    "**/scripts/**"
  ],
  "format": ["typescript", "tsx"],
  "absolute": true,
  "minLines": 10,
  "minTokens": 50,
  "gitignore": true
}
